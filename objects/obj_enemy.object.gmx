            <string>///Animation finish

original_image_speed = .25;

//show_debug_message("// in STEP STATE CHECK - "+string(STATE));

switch(STATE)
{
    
    case SMALL_HIT : // Punching
        if(image_index &gt;= image_number - 1) // When animation is finished
        {
            sprite_index = spr_enemy1_idle; // Change players animation back to standing
            image_speed = original_image_speed; // Set players animation speed
           
        }
    break;
    
    case BIG_HIT : // Punching
        if(image_index &gt;= image_number - 1) // When animation is finished
        {
            sprite_index = spr_enemy1_idle; // Change players animation back to standing
            image_speed = original_image_speed; // Set players animation speed
            isSemiLastAttacked = false;
        }
    break;
    
    case DOWN_HIT : // Punching
        if(image_index &gt;= image_number - 1) // When animation is finished
        {
            sprite_index = spr_enemy1_idle; // Change players animation back to standing
            image_speed = original_image_speed; // Set players animation speed
            isLastAttacked = false;   
        }
    break;

    case GRAB :
    
        //원래 x, y 좌표 저장.
        lastX = x;
        lastY = y;
    
        if(grabberID.cDir == RIGHT)
        {
            x = grabberID.x + (70 * grabberID.cDir);    
        }
        else
        {
            x = grabberID.x + (90 * grabberID.cDir);
        }
        
        y = grabberID.y - 70;
        depth = grabberID.depth -1;
        STATE = GRAB_ING;
        
    break;
    
    case GRAB_ING :
        if(grabberID.STATE == GRAB_ATTACK02 &amp;&amp; grabberID.image_index &gt;= 2.5 )
        {   
            y = y + 6;
            sprite_index = spr_enemy1_idle;
            image_speed = original_image_speed;
            if(grabberID.image_index &gt;= 4 ) 
            {
                // 막타를 맞는 순간의 control.
                y = y;
                y = lastY;
                
                hspeed = 9 * grabberID.cDir;
                zspeed =- 14;
                
                STATE = IDLE;
                
                alarm[1] = room_speed - 1; // 2 번째 바운싱.
                alarm[0] = room_speed;     // KnockBack 사용 변수 초기화.
                
            }
                    
        }
    break;
    
}
